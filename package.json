  "authors": [
    "Javier Moreno Molina <javier.moreno.molina@bbva.com",
    "Angel Manzano Alcaraz <angel.manzano.contractor@bbva.com>"
  ],
  "license": "ISC",
  "dependencies": {
    "bignumber": "^1.1.0",
    "body-parser": "^1.15.2",
    "change-case": "^3.0.1",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "errorhandler": "^1.5.0",
    "eth-sig-util": "latest",
    "ethereumjs-util": "latest",
    "express": "^4.16.2",
    "express-jsonschema": "^1.1.6",
    "method-override": "^2.3.10",
    "mongodb": "^2.2.33",
    "pino": "^4.11.0",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.5",
    "semaphore": "latest",
    "solc": "^0.4.18",
    "web3": "^1.0.0-beta.26",
    "web3-provider-engine": "^13.3.3",
    "xtend": "latest",
    "config": "1.29.2",
    "js-yaml": "3.10.0"
  },
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/config": "0.0.33",
    "@types/cors": "^2.8.4",
    "@types/express": "4.11.0",
    "@types/jest": "^23.1.2",
    "@types/mongodb": "2.2.18",
    "@types/pino": "^4.16.0",
    "@types/request": "^2.47.0",
    "@types/request-promise-native": "^1.0.14",
    "concurrently": "3.5.1",
    "jest": "^23.2.0",
    "jest-junit": "^5.1.0",
    "mkdirp": "0.5.1",
    "nodemon": "1.14.12",
    "raml2html": "6.4.2",
    "raml2html-markdown-theme": "1.0.2",
    "rimraf": "2.6.2",
    "ts-jest": "^22.4.6",
    "tslint": "^5.8.0",
    "typescript": "^2.9.2"
  },
  "engines": {
    "node": ">=0.12.0"
  },
  "scripts": {
    "start": "npm run serve:dev",
    "serve:dev": "concurrently \"npm run watch:ts\" \"sleep 3 && npm run serve:debug\"",
    "serve:prod": "node dist/index.js | pino -c --errorProps '*'",
    "serve:debug": "nodemon --inspect=0.0.0.0 dist/index.js | pino -c --errorProps '*'",
    "build:ts": "tsc",
    "watch:ts": "tsc -w --inlineSources --inlineSourceMap",
    "test": "jest",
    "lint": "tslint --project .",
    "lint:fix": "npm run lint -- --fix",
    "test:watch": "jest --watchAll",
    "coverage": "jest --coverage",
    "docs": "rimraf documentation && mkdirp documentation && raml2html --theme raml2html-markdown-theme raml/api.raml > documentation/api.md"
  }
}
